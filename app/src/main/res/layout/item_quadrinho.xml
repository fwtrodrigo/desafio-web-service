<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutItemQuadrinho"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="7dp"
    android:layout_marginTop="20dp"
    android:background="?attr/selectableItemBackground"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <ImageView

        android:id="@+id/imgQuadrinhoCapa"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/shape_quadro"
        android:contentDescription="@string/quadrinho"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/splash" />

    <TextView
        android:id="@+id/tvQuadrinhoNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgQuadrinhoCapa"
        android:layout_alignStart="@+id/imgQuadrinhoCapa"
        android:layout_marginTop="7dp"
        android:text="@string/nsa_quadrinho"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>